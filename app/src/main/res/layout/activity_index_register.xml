<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backlogin"
    tools:context=".index_register">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="注册界面"
        android:textSize="30dp"
        android:textColor="@android:color/background_dark"/>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@android:color/background_dark"
            android:text="注册用户:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:id="@+id/res_user"
            android:background="@drawable/edit_bg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@android:color/background_dark"
            android:text="登录密码:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:id="@+id/res_pwd"
            android:background="@drawable/edit_bg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@android:color/background_dark"
            android:text="重复密码:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:id="@+id/res_repwd"
            android:background="@drawable/edit_bg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:textSize="13dp"
            android:textColor="@android:color/background_dark"
            android:text="手机号码:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:inputType="phone"
            android:id="@+id/res_tel"
            android:background="@drawable/edit_bg"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_marginLeft="50dp"
            android:hint="请输入验证码"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/res_code"
            android:background="@drawable/edit_bg"
            />
        <ImageView
            android:layout_width="0dp"
            android:onClick="refresh"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:id="@+id/show_code"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:onClick="successRes"
        android:background="@android:drawable/btn_radio"
        android:text="注册" />

</LinearLayout>